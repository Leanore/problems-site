<%- model_class = Problem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div id="problem_desc">
  <%= render 'problem_description' %>
</div>

<div class="form-actions" id="form-actions-solve">
  <% if user_signed_in?%>
    <% if current_user.id != @problem.user_id  %>
      <%= render 'solve_form' %>
    <% else %>
    <%= link_to 'Back',
          :back, :class => 'btn' %>
    <%= link_to 'Edit',
              edit_problem_path(@problem), :class => 'btn btn-primary' %>
    <%= link_to 'Destroy',
              problem_path(@problem),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger pull-right' %>
    <% end %>
  <% else %>
    <h4>To solve problems please <%= link_to 'Sign in', new_user_session_path, :class => 'btn btn-primary' %> or <%= link_to 'Register', new_user_registration_path, :class => 'btn btn-primary' %></h4>
  <% end %>
</div>
