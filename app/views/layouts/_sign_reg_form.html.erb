<% if user_signed_in? %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        Logged in as <%= current_user.login %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to('My profile', user_path(current_user.id), :tabindex => "-1") %></li>
        <li><%= link_to('Edit account', edit_user_registration_path, :tabindex => "-1") %></li>
        <li><%= link_to('Add services', services_add_path, :tabindex => "-1") %></li>
        <li class="divider"></li>
        <li><%= link_to('Logout', destroy_user_session_path, :method=>'delete', :tabindex => "-1") %></li>
      </ul>
    </li>
<% else %>
    <li><%= link_to('Sign in', new_user_session_path)  %></li>
    <li><%= link_to('Register', new_user_registration_path)  %></li>
<% end %>